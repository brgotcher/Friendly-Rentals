<table>
	<tr>
		<th>customerID</th>
		<th>customerFirst</th>
		<th>customerLast</th>
		<th>phone</th>
		<th>email</th>
		<th>street</th>
		<th>city</th>
		<th>state</th>
		<th>zip</th>
	</tr>
	{{#each customers}}
	<tr id="row{{this.customerID}}">
		<td>{{this.customerID}}</td>
		<td>{{this.customerFirst}}</td>
		<td>{{this.customerLast}}</td>
		<td>{{this.phone}}</td>
		<td>{{this.email}}</td>
		<td>{{this.street}}</td>
		<td>{{this.city}}</td>
		<td>{{this.state}}</td>
		<td>{{this.zip}}</td>
    	<td><button id="updateButton{{this.customerID}}" onclick="updateCustomer({{this.customerID}})">Update</button></td>
		<td><button onclick="deleteCustomer({{this.customerID}})">Delete</button></td>
	</tr>
	{{/each}}

</table>

</div>

<div>


	<div class="row">
		<div class="columnLeft">
			<h4>Add New Customer</h4>
			<form action="/customers" method="post">
				<label for="customerFirst">First name:</label><br>
				<input type="text" id="customerFirst" name="customerFirst" required><br>

				<label for="customerLast">Last name:</label><br>
				<input type="text" id="customerLast" name="customerLast" required><br>

				<label for="phone">Phone:</label><br>
				<input type="text" id="phone" name="phone" required><br>

				<label for="email">E-mail:</label><br>
				<input type="text" id="email" name="email" required><br>

				<label for="street">Street Address:</label><br>
				<input type="text" id="street" name="street" required><br>

				<label for="city">City:</label><br>
				<input type="text" id="city" name="city" required><br>

				<label for="state">State:</label><br>
				<input type="text" id="state" name="state" required><br>

				<label for="zip">Zip Code:</label><br>
				<input type="text" id="zip" name="zip" required><br><br>

				<input type="submit" value="Add">
			</form>
		</div>




	</div>

</div>
</body>

</html>